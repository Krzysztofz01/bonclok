{
    "name": "Our cool modpack",
    "buildTarget": "client",
    "buildVersions": {
        "1.12.2": {
            "mods": [
                {
                    "name": "Mod name",
                    "includeClient": true,
                    "includeServer": true,
                    "resourceUrl": "https://some.download.server.xyz/compiled",
                    "sourceUrl": "https://some.download.server.xyz/source",
                    "configFiles": [
                        {
                            "sourcePath": "localconfig/optifine-config.yaml",
                            "destinationPath": "modpack-build-dir/optifine/config.yaml"
                        }
                    ],
                    "checksum": ""
                }
            ]
        }
    },
    "installation": [
        {
            "sourcePath": "localconfig/optifine-config.yaml",
            "destinationPath": "modpack-build-dir/optifine/config.yaml"
        }
    ],
    "devInstallation": [
        {
            "sourcePath": "localconfig/optifine-config.yaml",
            "destinationPath": "modpack-build-dir/optifine/config.yaml"
        }
    ]
}