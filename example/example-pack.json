{
    "name": "Our cool modpack",
    "buildVersions": {
        "1.12.2": {
            "mods": [
                {
                    "name": "Mod name",
                    "includeClient": true,
                    "includeServer": true,
                    "resourceUrl": "https://some.download.server.xyz/compiled",
                    "sourceUrl": "https://some.download.server.xyz/source",
                    "configFiles": [
                        {
                            // The source path is relative to the modpack JSON file location
                            "sourcePath": "local-directory/some-mod-directory/config.yaml",
                            // The destination path is combined with the build path: xyz-build/som-mod-directory/config.yml
                            "destinationPath": "some-mod-directory/config.yaml"
                        }
                    ],
                    "checksum": ""
                }
            ]
        }
    },
    "installation": [
        {
            // The source path is relative to current directory (cwd)
            "sourcePath": "localconfig/optifine-config.yaml",
            // The destination path should be absolute
            "destinationPath": "modpack-build-dir/optifine/config.yaml"
        }
    ],
    "devInstallation": [
        {
            // The source path is relative to current directory (cwd)
            "sourcePath": "localconfig/optifine-config.yaml",
            // The destination path should be absolute
            "destinationPath": "modpack-build-dir/optifine/config.yaml"
        }
    ]
}